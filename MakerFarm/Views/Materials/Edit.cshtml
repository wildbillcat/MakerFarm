@model MakerFarm.Models.Material

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Material</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaterialId)

        <div class="form-group">
            @Html.LabelFor(model => model.MaterialName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaterialName)
                @Html.ValidationMessageFor(model => model.MaterialName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SuppportMaterial, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SuppportMaterial)
                @Html.ValidationMessageFor(model => model.SuppportMaterial)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PrinterTypeId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PrinterTypeId, (SelectList)ViewData["PrintersList"])
                @Html.ValidationMessageFor(model => model.PrinterTypeId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaterialSpoolQuantity, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaterialSpoolQuantity)
                @Html.ValidationMessageFor(model => model.MaterialSpoolQuantity)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
