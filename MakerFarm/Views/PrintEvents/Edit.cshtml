@model MakerFarm.Models.PrintEvent

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PrintEvent</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PrintEventId)

        <div class="form-group">
            @Html.LabelFor(model => model.EventType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.EventType, new SelectList(ViewBag.EventTypes), new { onchange = "changeError()" })
                @Html.ValidationMessageFor(model => model.EventType)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EventTimeStamp, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.EventTimeStamp
                @Html.HiddenFor(model => model.EventTimeStamp)
                @Html.ValidationMessageFor(model => model.EventTimeStamp)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaterialUsed, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaterialUsed)
                @Html.ValidationMessageFor(model => model.MaterialUsed)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PrinterId, "PrinterId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.Printer.PrinterName
                @Html.HiddenFor(model => model.PrinterId)
                @Html.ValidationMessageFor(model => model.PrinterId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.UserName
                @Html.HiddenFor(model => model.UserName)
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PrintId, "PrintId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.Print.FileName
                @Html.HiddenFor(p => p.PrintId)
                @Html.ValidationMessageFor(model => model.PrintId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
