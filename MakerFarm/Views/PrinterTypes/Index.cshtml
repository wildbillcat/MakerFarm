@model IEnumerable<MakerFarm.Models.PrinterType>

@{
    ViewBag.Title = "Index";
}

<h2>Available Printers</h2>

<table class="table">
    <tr>
@for(int i = 0; i < Model.Count(); i++){
    var item = Model.ElementAt(i);
    if (i % 3 == 0 && i != 0) { 
     @Html.Raw("</tr><tr>")
    }
    <td>
        <a href=@Url.Action("Index", "Prints", new { id = item.PrinterTypeId }, null)>
            <img src="@Url.Content(item.PrinterIcon)" alt="Image" />
        </a>
        <br />
        @item.TypeName
    </td>
     
     }
    </tr>
</table>
