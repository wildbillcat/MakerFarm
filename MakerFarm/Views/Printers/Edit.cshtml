@model MakerFarm.Models.Printer

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Printer</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PrinterId)

        <div class="form-group">
            @Html.LabelFor(model => model.PrinterName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PrinterName)
                @Html.ValidationMessageFor(model => model.PrinterName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InternalName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InternalName)
                @Html.ValidationMessageFor(model => model.InternalName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PrinterTypeId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PrinterTypeId, (SelectList)ViewData["PrintersList"])
                @Html.ValidationMessageFor(model => model.PrinterTypeId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PapercutPrintServer, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PapercutPrintServer)
                @Html.ValidationMessageFor(model => model.PapercutPrintServer)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PapercutPrintQueue, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PapercutPrintQueue)
                @Html.ValidationMessageFor(model => model.PapercutPrintQueue)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
